{
  "compilerOptions": {
    "target": "es6",                             // Compile to ECMAScript 6 (ES6)
    "module": "esnext",                          // Use ES module syntax for imports/exports
    "moduleResolution": "node",                  // Node-style module resolution
    "lib": ["dom", "es6"],                       // Include DOM and ES6 library files
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Allow default imports from modules with no default export
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,    // Ensure consistent casing in file names
    "outDir": "./dist",                          // Output compiled JavaScript to the "dist" folder
    "baseUrl": "./src",                          // Base directory for resolving non-relative modules
    "paths": {
      "*": ["node_modules/*", "src/*"]           // Use the "src" folder for module resolution
    }
  },
  "include": [
    "src/**/*"                                   // Include all TypeScript files in the "src" folder
  ],
  "exclude": [
    "node_modules"                               // Exclude "node_modules" directory
  ]
}
